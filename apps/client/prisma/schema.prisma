// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// For vault-level APY configurations
model VaultApyConfig {
  id           Int      @id @default(autoincrement())
  chainId      Int      @map("chain_id")
  vaultAddress String   @map("vault_address") @db.VarChar(42)
  minApy       Decimal  @map("min_apy") @db.Decimal(10, 4)
  maxApy       Decimal  @map("max_apy") @db.Decimal(10, 4)
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@unique([chainId, vaultAddress], name: "unique_vault_config")
  @@index([chainId])
  @@map("vault_apy_config")
}

// For market-level APY configurations
model MarketApyConfig {
  id        Int      @id @default(autoincrement())
  chainId   Int      @map("chain_id")
  marketId  String   @map("market_id") @db.VarChar(66)
  minApy    Decimal  @map("min_apy") @db.Decimal(10, 4)
  maxApy    Decimal  @map("max_apy") @db.Decimal(10, 4)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([chainId, marketId], name: "unique_market_config")
  @@index([chainId])
  @@map("market_apy_config")
}

// For global APY strategy configuration
model ApyStrategyConfig {
  id                    Int      @id @default(autoincrement())
  allowIdleReallocation Boolean  @default(true) @map("allow_idle_reallocation")
  defaultMinApy         Decimal  @default(0) @map("default_min_apy") @db.Decimal(10, 4)
  defaultMaxApy         Decimal  @default(10) @map("default_max_apy") @db.Decimal(10, 4)
  updatedAt             DateTime @updatedAt @map("updated_at")

  @@map("apy_strategy_config")
}
