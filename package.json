{
  "name": "morpho-blue-reallocation-bot",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "pnpm --filter '@morpho-blue-reallocation-bot/*' lint",
    "prepare": "husky",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:helpers": "vitest helpers",
    "test:helpers:run": "vitest helpers --run",
    "build:config": "pnpm --filter @morpho-blue-reallocation-bot/config build",
    "test:strategies": "vitest strategies",
    "test:strategies:run": "vitest strategies --run",
    "test:execution": "vitest execution",
    "test:execution:run": "vitest execution --run",
    "reallocate": "pnpm build:config && tsx apps/client/src/index.ts --env-file=.env"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.864.0",
    "ponder": "^0.10.13",
    "tsx": "^4.19.3",
    "viem": "^2.23.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/node": "^20.9.0",
    "concurrently": "^9.1.2",
    "dotenv": "^16.4.7",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^3.8.3",
    "eslint-plugin-import-x": "^4.6.1",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "3.5.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1",
    "vitest": "^3.0.9"
  },
  "engines": {
    "node": ">=18.14"
  },
  "pnpm": {
    "overrides": {
      "viem": "2.23.2"
    }
  },
  "workspaces": [
    "apps/*"
  ],
  "packageManager": "pnpm@9.13.2+sha1.969cc200a41db98449afee1bfa7578b3ce6ff330"
}
